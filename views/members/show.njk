{% extends "layout.njk" %}

{% block content %}
  <div class="card">
    <!--Abaixo é a imagem que está do lado ESQUERDO-->
    <section class="avatar" style="background: url({{ member.avatar_url }}) no-repeat center center / cover"></section>
    <section class="details">
      <!-- Aki irá ficar os dados do instrutor e dos membros tipo NOME, IDADE, SEXO, MUSCULAÇÃO, GINASTICA -->
      <h3>Detalhes</h3>

      <div class="item">
        <div>Membro</div>
        <div>{{ member.name }}</div>
      </div>

      <div class="item">
        <div>Email</div>
        <div>{{ member.email }}</div>
      </div>

      <div class="item">
        <div>Aniversário</div>
        <div>{{ member.birth }}</div>
      </div>

      <div class="item">
        <div>Sexo</div>
        <!--Vamos fazer um IF, mostra MASCULINO se member.gender == "M"-->
        <div>{{ "Masculino" if member.gender == "M" else "Feminino"}}</div>
      </div>

      

      <div class="item">
        <div>Tipo Sanguineo</div>
        <!--A linha abaixo representa o momento em que o INSTRUCTOR SE CADASTROU NO SISTEMA-->
        <div>{{ member.blood }}</div>
      </div>

      <div class="item">
        <div>Peso (kg)</div>
        <!--A linha abaixo representa o momento em que o INSTRUCTOR SE CADASTROU NO SISTEMA-->
        <div>{{ member.weight }}</div>
      </div>

      <div class="item">
        <div>Altura (cm)</div>
        <!--A linha abaixo representa o momento em que o INSTRUCTOR SE CADASTROU NO SISTEMA-->
        <div>{{ member.height }}</div>
      </div>

      <a href="/members/{{ member.id }}/edit" class="button">Editar</a>

    </section>
  </div>

{% endblock content %}