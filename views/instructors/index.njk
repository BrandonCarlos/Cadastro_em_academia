{% extends "layout.njk" %}

{% block content %}
  <div class="card table-container">
    <a href="/instructors/create">Novo</a>
    <table width="100%">
      <thead>
        <tr>
          <th>Instructor</th>
          <th>Atendimento</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        <!-- Abaixo ESTOU fazendo um FOR(repetição) com os dados que eu CADASTREI dos INSTRUCTORS E ALUNOS -->
        {% for instructor in instructors %}
        <tr>
          <td>
              <span style="background-image: url({{instructor.avatar_url}})"></span>
            {{instructor.name}}
          </td>
          <td>{{instructor.services}}</td>
          <td><a href="/instructors/{{instructor.id}}">Ver</a></td>
        </tr>
        {% endfor %}
        
      </tbody>

    </table>
  </div>

{% endblock content %}