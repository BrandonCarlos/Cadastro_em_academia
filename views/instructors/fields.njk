<!--CAMPOS DO INSTRUTOR-->

<div class="item">
  <div>Avatar URL</div>
  <div>
    <!--Neste INPUT se espera algo do tipo: https://-->
    <!--Os "names" que eu to colocando eu vou receber lá no BACK-END, lá no ROUTES -->
    <!--Para deixarmos o VALOR dentro do INPUT usamos o value=""-->
    <input type="url" name="avatar_url" placeholder="http://" value="{{ instructor.avatar_url }}">
  </div>
</div>

<div class="item">
  <div>Instrutor</div>
  <div>
    <input type="text" name="name" placeholder="Nome do Instrutor" value="{{ instructor.name }}">
  </div>
</div>

<div class="item">
  <div>Data de nascimento</div>
  <div>
    <input type="date" name="birth" value="{{ instructor.birth }}">
  </div>
</div>

<div class="item">
  <div>Sexo</div>
  <div>
    <span>
      <!--Checked obrigando ao usuário que selecione o "sexo"-->
      <input type="radio" name="gender" value="M" {% if instructor.gender == 'M' %} checked="checked" {% endif %}>
      Masculino
      <!--Quando eu selecionar este irá enviar para mim o valor F-->
      <input type="radio" name="gender" value="F" {% if instructor.gender == 'F' %} checked="checked" {% endif %}>
      Feminino
    </span>
  </div>
  <div class="item">
    <div>Área de atuação</div>
    <div>
      <input type="text" name="services" placeholder="Separe os serviços prestados por virgula" value="{{ instructor.services }}">
    </div>
  </div>

  <!--"Submit" significa que quando eu clicar nele, ele vai perceber que está dentro do FORM e vai executar a AÇÃO DE ENVIAR para a página INSTRUCTORS no formato de POST ele vai enviar todos os nossos DADOS-->
  <button type="submit">Salvar</button>